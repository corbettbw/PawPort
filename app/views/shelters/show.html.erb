<div class="max-w-3xl mx-auto mt-10 bg-white rounded-2xl shadow p-6">
  <h1 class="text-2xl font-semibold mb-6"><%= @shelter.name %></h1>

  <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-8">
    <div>
      <dt class="text-sm text-gray-500">Address</dt>
      <dd class="text-base"><%= @shelter.address.presence || "—" %></dd>
    </div>

    <div>
      <dt class="text-sm text-gray-500">Phone</dt>
      <dd class="text-base"><%= @shelter.phone.presence || "—" %></dd>
    </div>

    <div>
      <dt class="text-sm text-gray-500">Contact Email</dt>
      <dd class="text-base"><%= @shelter.contact_email.presence || "—" %></dd>
    </div>

    <div>
      <dt class="text-sm text-gray-500">Capacity</dt>
      <dd class="text-base"><%= @shelter.capacity.present? ? @shelter.capacity : "—" %></dd>
    </div>

    <div>
      <dt class="text-sm text-gray-500">Vacancies</dt>
      <dd class="text-base"><%= @shelter.vacancies.present? ? @shelter.vacancies : "—" %></dd>
    </div>
  </dl>

  <div class="mt-8 flex flex-wrap gap-3">
    <%= link_to "Edit", edit_shelter_path(@shelter), class: "px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700" %>
    <%= link_to "Delete", @shelter, data: { turbo_method: :delete, turbo_confirm: "Delete this shelter?" }, class: "px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700" %>
    <%= link_to "My Shelters", shelters_path, class: "px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200" %>
    <%= link_to "Home", root_path, class: "px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200" %>
  </div>
</div>
