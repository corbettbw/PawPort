<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-2xl shadow">
  <h1 class="text-2xl font-semibold mb-4">Create Shelter</h1>

  <%= form_with model: @shelter, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div>
      <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :address, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div>
      <%= f.label :contact_email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :contact_email, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :capacity, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :capacity, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
      </div>
      <div>
        <%= f.label :vacancies, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :vacancies, class: "w-full rounded-lg border border-gray-300 px-3 py-2" %>
      </div>
    </div>

    <div class="pt-2">
      <%= f.submit "Create Shelter", class: "btn btn-primary px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
