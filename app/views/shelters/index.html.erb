<!-- app/views/shelters/index.html.erb -->
<div class="max-w-3xl mx-auto p-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">Your shelters</h1>
    <div class="flex gap-3">
      <%= link_to "New shelter", new_shelter_path, class: "btn btn-primary" %>
      <%= link_to "Find shelter to join", browse_shelters_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <% if @shelters.any? %>
    <ul class="divide-y">
      <% @shelters.each do |shelter| %>
        <li class="py-3">
          <%= link_to shelter.name, shelter_path(shelter), class: "font-medium hover:underline" %>
          <div class="text-sm text-gray-600"><%= shelter.address %></div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No shelters yet.</p>
  <% end %>
</div>
