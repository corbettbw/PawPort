<h2 class="text-2xl font-semibold text-center mt-10">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { class: "max-w-xl mx-auto mt-8 bg-white rounded-2xl shadow p-6 space-y-6", novalidate: true }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium mb-1" %>
    <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full rounded-xl border px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rose-600",
          "aria-invalid": resource.errors[:email].present?,
          "aria-describedby": ("email-error" if resource.errors[:email].present?) %>
  </div>

  <div>
    <div class="flex items-baseline justify-between">
      <%= f.label :password, class: "block text-sm font-medium mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full rounded-xl border px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rose-600",
          "aria-invalid": resource.errors[:password].present?,
          "aria-describedby": ("password-error" if resource.errors[:password].present?) %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full rounded-xl border px-4 py-3 focus:outline-none focus:ring-2 focus:ring-rose-600",
          "aria-invalid": resource.errors[:password_confirmation].present?,
          "aria-describedby": ("password_confirmation-error" if resource.errors[:password_confirmation].present?) %>
  </div>

  <div class="pt-2">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
