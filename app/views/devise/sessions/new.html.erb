<div class="min-h-[70vh] grid place-items-center px-4">
  <div class="w-full max-w-md bg-white shadow-sm rounded-xl p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Log in</h1>

    <%= form_with(model: resource,
                  as: resource_name,
                  url: session_path(resource_name),
                  html: { class: "space-y-5" }) do |f| %>

      <div class="space-y-2">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "block w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-rose-500" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "block w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-rose-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me,
                class: "rounded border-gray-300 text-rose-600 focus:ring-rose-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <%= f.submit "Log in",
            class: "inline-flex w-full justify-center rounded-md bg-rose-600 px-4 py-2
                    font-medium text-white hover:bg-rose-700 transition-colors" %>
    <% end %>

    <div class="mt-6 text-sm flex items-center justify-between">
      <%= link_to "Sign up", new_registration_path(resource_name),
            class: "text-blue-600 hover:underline" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name),
            class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
